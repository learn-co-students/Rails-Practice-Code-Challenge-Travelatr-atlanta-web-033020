<h1>New Blogger</h1>

<% if @blogger.errors %>
  <ul style="color:red">
    <% @blogger.errors.full_messages.each do |message| %>
      <li>Error: <%= message %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @blogger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  
  <%= f.label :age %>
  <%= f.text_field :age %><br>

  <%= f.label :bio %>
  <%= f.text_area :bio %><br>

  <%= f.submit %>
<% end %>